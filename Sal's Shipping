def ground_ship(weight):
  if weight <= 2:
    cost = (1.5*weight)+20
    return cost
  elif 2 < weight <= 6:
    cost = (3*weight)+20
    return cost
  elif 6 < weight <= 10:
    cost = (4*weight)+20
    return cost
  elif weight > 10:
    cost = (4.75*weight)+20
    return cost
print(ground_ship(8.4))

premium_ground_ship = 125

def drone_ship(weight):
  if weight <= 2:
    cost = (4.5*weight)
    return cost
  elif 2 < weight <= 6:
    cost = (9*weight)
    return cost
  elif 6 < weight <= 10:
    cost = (12*weight)
    return cost
  elif weight > 10:
    cost = (14.25*weight)
    return cost
print(drone_ship(1.5))

def cheapest_shipping_option(weight):
  ground = ground_ship(weight)
  premium = premium_ground_ship
  drone = drone_ship(weight)
  
  if ground < premium and ground < drone:
    method = " standard ground"
    cost = ground
    print("The cheapest shipping method is $%.2f with % shipping." % (cost, method))
  elif premium < ground and premium < drone:
    method = " premium ground"
    cost = premium
    print("The cheapest shipping method is $%.2f with % shipping." % (cost, method))
  else:
    method = " drone"
    cost = drone
    print("The cheapest shipping method is $%.2f with % shipping." % (cost, method))
cheapest_shipping_option(4.8)
cheapest_shipping_option(41.5)
