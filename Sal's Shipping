def ground_ship(weight):
  if weight <= 2:
    cost = (1.5*weight)+20
    return cost
  elif 2 < weight <= 6:
    cost = (3*weight)+20
    return cost
  elif 6 < weight <= 10:
    cost = (4*weight)+20
    return cost
  elif weight > 10:
    cost = (4.75*weight)+20
    return cost

premium_ground_ship = 125

def drone_ship(weight):
  if weight <= 2:
    cost = (4.5*weight)
    return cost
  elif 2 < weight <= 6:
    cost = (9*weight)
    return cost
  elif 6 < weight <= 10:
    cost = (12*weight)
    return cost
  elif weight > 10:
    cost = (14.25*weight)
    return cost

def cheapest_shipping_option(weight):
  ground = ground_ship(weight)
  premium = premium_fround_ship
  drone = drone_ship(weight)
  
  if ground < premium and ground < drone:
    method = "standard ground"
    cost = ground
  elif premium < ground and premium < drone:
    method = "premium ground"
    cost = premium
  else:
    method = "drone"
    cost = drone
